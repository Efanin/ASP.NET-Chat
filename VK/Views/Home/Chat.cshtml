@model List<MessageModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <!-- Заголовок чата -->
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Онлайн-чат</h5>
                    <span class="badge bg-light text-dark">Online</span>
                </div>
                
                <!-- Тело чата (сообщения) -->
                <div class="card-body chat-body p-3" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            @if (item.IsMe == false)
                            {
                                <!-- Пример входящего сообщения -->
                                <div class="d-flex mb-3">
                                    <div class="flex-shrink-0">
                                        <img src="https://via.placeholder.com/40" class="rounded-circle" alt="User">
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="bg-white rounded p-3 shadow-sm">
                                            <strong>@item.User</strong>
                                            <p class="mb-0">@item.Text</p>
                                            <small class="text-muted">10:15</small>
                                        </div>
                                    </div>
                                </div>
                            }else{
                            <!-- Пример исходящего сообщения -->
                            <div class="d-flex mb-3 justify-content-end">
                                <div class="flex-grow-1 me-3 text-end">
                                    <div class="bg-primary text-white rounded p-3 shadow-sm">
                                            <strong>@item.User</strong>
                                            <p class="mb-0">@item.Text</p>
                                        <small class="text-white-50">10:16</small>
                                    </div>
                                </div>
                                <div class="flex-shrink-0">
                                    <img src="https://via.placeholder.com/40" class="rounded-circle" alt="You">
                                </div>
                            </div>
                            }
                        }

                    }
                    <!-- Сообщения будут добавляться здесь динамически -->
                    <div id="chatMessages"></div>
                </div>
                
                <!-- Форма ввода сообщения -->
                <div class="card-footer">
                    <form id="chatForm" class="d-flex" asp-action="Send">
                        <input name="sms" type="text" id="messageInput" class="form-control me-2" placeholder="Введите сообщение..." required>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Отправить
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Подключение Font Awesome для иконок -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">